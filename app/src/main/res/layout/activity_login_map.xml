<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.ghosthawk.salard.Login.LoginMapActivity">
    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:id="@+id/map_fragment"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/statusbar"
        android:alpha="0.7"


        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/btn_location"
            android:layout_marginTop="4dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/my_location_white"/>

        <Button
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/btn_ok"
            android:background="@drawable/okay_white"
            android:layout_marginTop="4dp"
            android:layout_alignParentRight="true"
             />

        <TextView
            android:layout_width="240dp"
            android:layout_height="24dp"
            android:id="@+id/text_message1"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="#ffffff"
            android:background="@drawable/search_white"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
             />

        <TextView
            android:layout_width="240dp"
            android:layout_height="24dp"
            android:id="@+id/text_message"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:textSize="13sp"
            android:layout_alignLeft="@+id/text_message1"
            android:layout_marginLeft="11dp"/>

    </RelativeLayout>
</RelativeLayout>
