<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="360dp"
    android:layout_height="80dp"

    android:background="#ffffff"
    android:id="@+id/view_map_window">

    <ImageView
        android:layout_width="140dp"
        android:scaleType="centerCrop"
        android:layout_height="80dp"
        android:id="@+id/img_main" />
    <TextView
        android:layout_width="140dp"
        android:layout_height="13dp"
        android:id="@+id/text_name"
        android:textSize="13sp"
        android:textColor="@color/SalardColor"
        android:layout_toRightOf="@+id/img_main"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="21dp"
        />
    <TextView
        android:layout_width="70dp"
        android:layout_height="13dp"
        android:textSize="13sp"
        android:textColor="@color/SalardColor"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/text_price"
        android:layout_toRightOf="@+id/img_main"

        android:layout_below="@+id/text_name"/>

    <TextView
        android:layout_width="68dp"
        android:layout_height="13dp"
        android:id="@+id/text_location"
        android:textSize="13sp"
        android:textColor="@color/SalardWeakColor"
        android:layout_toRightOf="@+id/text_price"
        android:layout_below="@+id/text_name"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="2dp"
         />


    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/view_member_small"
        android:layout_toRightOf="@+id/text_name"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="20dp"/>


</RelativeLayout>