<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ghosthawk.salard.Login.MembershipActivity">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:background="@drawable/sample6"
        android:id="@+id/img_pic"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_name"
        android:hint="닉네임"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/img_pic"
        android:layout_alignLeft="@+id/img_pic"
        android:layout_alignRight="@+id/img_pic"/>
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_phone"
        android:hint="핸드폰 번호"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/edit_name"
        android:layout_alignLeft="@+id/img_pic"
        android:layout_alignRight="@+id/img_pic"/>

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_email"
        android:hint="이메일"
        android:layout_weight="3"
        android:layout_below="@+id/edit_phone"
        android:layout_alignLeft="@+id/edit_phone"
        android:layout_alignStart="@+id/edit_phone" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_statemsg"
        android:hint="상태메세지"
        android:layout_below="@+id/edit_email"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_id"
        android:hint="ID"
        android:layout_below="@+id/edit_statemsg"
        android:layout_centerHorizontal="true" />
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_pw"
        android:hint="PW"
        android:layout_below="@+id/edit_id"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_membership"
        android:text="가입하기"
        android:layout_below="@+id/edit_pw"
        android:layout_centerHorizontal="true" />





</RelativeLayout>
