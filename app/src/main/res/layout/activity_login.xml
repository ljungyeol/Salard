<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.ghosthawk.salard.Login.LoginActivity">


    <ImageView
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/img_main"
        android:background="@drawable/salardlogo"
        android:backgroundTint="#4bd479" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_main"
        android:id="@+id/edit_id"
        android:hint="ID"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/img_main"
        android:layout_alignRight="@+id/img_main"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_id"
        android:id="@+id/edit_pw"
        android:hint="PW"
        android:layout_alignLeft="@+id/img_main"
        android:layout_alignRight="@+id/img_main"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textAlignment="center"
        android:id="@+id/btn_login"
        android:layout_below="@+id/edit_pw"
        android:layout_centerHorizontal="true"
        android:layout_alignLeft="@+id/img_main"
        android:layout_alignRight="@+id/img_main"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Facebook"
        android:id="@+id/btn_facebook"
        android:layout_below="@+id/btn_login"
        android:layout_centerHorizontal="true"
        android:layout_alignLeft="@+id/img_main"
        android:layout_alignRight="@+id/img_main"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kakao Talk"
        android:id="@+id/btn_kakao"
        android:layout_below="@+id/btn_facebook"
        android:layout_alignLeft="@+id/img_main"
        android:layout_alignRight="@+id/img_main"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join Email"
        android:id="@+id/btn_email"
        android:layout_below="@+id/btn_kakao"
        android:layout_centerHorizontal="true"
        android:layout_alignLeft="@+id/img_main"
        android:layout_alignRight="@+id/img_main"/>


</RelativeLayout>
