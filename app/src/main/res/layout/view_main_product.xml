<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="168dp"
    android:id="@+id/frame1">

    <ImageView
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:id="@+id/image_product"
        android:layout_marginTop="8dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/ic_launcher"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#ffffff"
        android:id="@+id/namebar"
        android:alpha="0.8"
        android:layout_alignBottom="@+id/image_product">
    </RelativeLayout>

    <TextView
        android:layout_width="220dp"
        android:layout_height="19dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/SalardColor"
        android:textStyle="bold"
        android:layout_alignTop="@+id/namebar"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="11dp"
        android:id="@+id/text_name"
        android:gravity="center_vertical"
        android:textSize="16sp" />
    <TextView
        android:layout_width="70dp"
        android:layout_height="18dp"
        android:id="@+id/text_price"
        android:layout_below="@+id/text_name"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="16dp"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:textColor="@color/SalardColor"
        />
    <TextView
        android:layout_width="70dp"
        android:layout_height="15dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/text_count"
        android:layout_alignBottom="@+id/namebar"
        android:layout_marginBottom="4dp"
        android:layout_toRightOf="@+id/text_price"
        android:layout_marginLeft="1dp"
        android:gravity="center_vertical"
        android:textSize="13sp"
        android:textColor="@color/SalardWeakColor"
        />



    <include
        android:layout_width="45dp"
        android:layout_height="40dp"
        layout="@layout/view_member_small"
        android:layout_marginRight="16dp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/namebar"
        android:layout_marginBottom="5dp"
         />



</RelativeLayout>