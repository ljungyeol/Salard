<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ghosthawk.salard.SelectActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/img_buy"

        android:layout_marginTop="140dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_marginRight="46dp"
        android:layout_marginEnd="46dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/img_sell"
        android:layout_alignTop="@+id/img_buy"
        android:layout_toLeftOf="@+id/img_buy"
        android:layout_toStartOf="@+id/img_buy"
        android:layout_marginRight="52dp"
        android:layout_marginEnd="52dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="판매자"
        android:id="@+id/textView2"
        android:textAlignment="center"
        android:layout_below="@+id/img_sell"
        android:layout_alignLeft="@+id/img_sell"
        android:layout_alignStart="@+id/img_sell"
        android:layout_alignRight="@+id/img_sell"
        android:layout_alignEnd="@+id/img_sell" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="구매자"
        android:id="@+id/textView3"
        android:textAlignment="center"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignLeft="@+id/img_buy"
        android:layout_alignStart="@+id/img_buy"
        android:layout_alignRight="@+id/img_buy"
        android:layout_alignEnd="@+id/img_buy" />
</RelativeLayout>
