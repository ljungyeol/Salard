<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <include
        android:layout_width="70dp"
        android:layout_height="64dp"
        layout="@layout/view_member"
        android:layout_marginTop="32dp"
        android:id="@+id/imageView3"
        android:layout_centerHorizontal="true" />




    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="260dp"
        android:layout_height="18dp"
        android:id="@+id/text_name2"
        android:text="아이디"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/SalardColor"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="260dp"
        android:layout_height="11dp"
        android:text="상태 메세지"
        android:textSize="11sp"
        android:gravity="center"
        android:textColor="@color/SalardWeakColor"
        android:id="@+id/text_statmsg"
        android:layout_below="@+id/text_name2"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true" />
    <View
        android:layout_width="360dp"
        android:layout_height="1dp"
        android:background="@color/SalardLine"
        android:layout_centerHorizontal="true"
        android:id="@+id/lineB"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/btn_follow"

        />
    <ImageView
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:id="@+id/img_follow"
        android:background="@drawable/follow"
        android:layout_below="@id/text_statmsg"
        android:layout_marginTop="19dp"

        android:layout_toLeftOf="@+id/text_follow"
        android:layout_marginRight="9dp"/>

    <TextView
        android:layout_width="33dp"
        android:layout_height="13dp"
        android:text="000"
        android:textSize="13sp"
        android:textColor="@color/SalardWeakColor"
        android:id="@+id/text_follow"
        android:gravity="right"
        android:layout_marginRight="16dp"
        android:layout_marginTop="19dp"
        android:layout_toLeftOf="@+id/lineC"
        android:layout_below="@+id/text_statmsg"/>

    <ImageView
        android:layout_width="9dp"
        android:layout_height="13dp"
        android:id="@+id/img_location"
        android:background="@drawable/location"
        android:layout_toRightOf="@+id/lineC"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/text_statmsg"
        android:layout_marginTop="19dp"/>

    <TextView
        android:layout_width="50dp"
        android:layout_height="13dp"
        android:text="낙성대"
        android:textSize="13sp"
        android:textColor="@color/SalardWeakColor"
        android:layout_toRightOf="@+id/img_location"
        android:id="@+id/text_location"
        android:layout_alignBottom="@+id/text_follow"
        android:layout_marginLeft="9dp"/>



    <Button
        android:layout_width="144dp"
        android:layout_height="28dp"
        android:id="@+id/btn_follow"
        android:layout_marginTop="24dp"
        android:background="@drawable/selector_11_btn_follow"
        android:layout_toLeftOf="@+id/lineC"
        android:layout_marginRight="4dp"
        android:layout_below="@+id/text_follow" />

    <Button
        android:layout_width="144dp"
        android:layout_height="28dp"
        android:id="@+id/btn_message"
        android:background="@drawable/selector_10_btn_deal"
        android:layout_marginTop="24dp"
        android:layout_toRightOf="@+id/lineC"
        android:layout_marginLeft="4dp"
        android:layout_below="@+id/text_follow" />
    <View
        android:layout_width="1dp"
        android:layout_height="13dp"
        android:background="@color/SalardLine"
        android:layout_centerHorizontal="true"
        android:id="@+id/lineC"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/text_statmsg"
        />



</RelativeLayout>