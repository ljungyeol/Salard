<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ghosthawk.salard.Message.RatingFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="상대방에 대한 후기를 작성해 주세요!"
        android:layout_centerHorizontal="true"
        android:textSize="12sp"

        android:textColor="@color/setting"
        android:id="@+id/textmessage"/>
    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingbar"
        android:layout_below="@id/textmessage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        style="@style/salardRatingBar"/>
    <EditText
        android:layout_width="160dp"
        android:background="@drawable/text"
        android:layout_height="wrap_content"
        android:id="@+id/edit_rating"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ratingbar"
        android:layout_marginTop="20dp"/>
    <Button
        android:layout_width="144dp"
        android:layout_height="28dp"
        android:id="@+id/btn_rating"
        android:background="@drawable/selector_14_btn_regist"
        android:layout_below="@id/edit_rating"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
